{
  "name": "khoj",
  "version": "2.0.0",
  "description": "AI-powered web scraping platform with intelligent selector generation",
  "private": true,
  "type": "module",
  "keywords": ["web-scraping", "ai", "automation", "data-extraction", "playwright", "chrome-extension"],
  "author": "Khoj Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khoj/khoj.git"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run build:client",
    "build:client": "cd frontend && npm run build",
    "start": "node dist/index.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t khoj .",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "axios": "^1.7.2",
    "bullmq": "^5.8.0",
    "cheerio": "^1.0.0-rc.12",
    "fastify": "^4.27.2",
    "fastify-rate-limit": "^7.6.0",
    "fastify-cors": "^8.4.0",
    "fastify-websocket": "^10.0.1",
    "fastify-multipart": "^8.3.0",
    "ioredis": "^5.4.1",
    "openai": "^4.58.1",
    "playwright": "^1.46.0",
    "zod": "^3.23.8",
    "csv-writer": "^1.6.0",
    "xml2js": "^0.6.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "proxy-agent": "^6.3.1",
    "ws": "^8.18.0",
    "@anthropic-ai/sdk": "^0.24.3",
    "sharp": "^0.33.4",
    "express-rate-limit": "^7.4.0",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/ws": "^8.5.12",
    "@types/xml2js": "^0.4.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "prisma": "^5.16.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.3",
    "@vitest/coverage-v8": "^2.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}